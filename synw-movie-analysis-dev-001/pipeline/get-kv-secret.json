{
	"name": "get-kv-secret",
	"properties": {
		"description": "Collects secret from Azure Key Vault",
		"activities": [
			{
				"name": "GET secret",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": true,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"url": {
						"value": "@concat(\r\n    'https://'\r\n    ,pipeline().parameters.key_vault_name\r\n    ,'.vault.azure.net/secrets/'\r\n    ,pipeline().parameters.secret_name,\r\n    '/'\r\n    ,pipeline().parameters.secret_version)",
						"type": "Expression"
					},
					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			}
		],
		"parameters": {
			"key_vault_name": {
				"type": "string"
			},
			"secret_name": {
				"type": "string"
			},
			"secret_version": {
				"type": "string"
			}
		},
		"folder": {
			"name": "01 utilities"
		},
		"annotations": []
	}
}